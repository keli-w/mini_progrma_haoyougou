/* pages/cart/cart.wxss */
page{
  height: 100%;
}
.addressInfo{
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  background-color: #c9c9c9;
}
.content{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.cart-main{
  overflow: hidden;
  flex: 1;
}
.cart-title{
  font-size: 30rpx;
  padding: 20rpx 15rpx;
}
.cart-content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx;
  border-bottom: 2rpx solid #c9c9c9;
}
.check{
  padding-right: 10rpx;
}
.cb{
  transform: scale(0.8, 0.8);
}
.left{
  flex: 2;
}
.left image{
  width: 80%;
}
.right{
  flex: 5;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-info{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
  font-size: 24rpx;
}
.cart-op{
  display: flex;
  justify-content: space-between;
}
.cart-op .price{
  color: var(--themeColor);
  font-size: 30rpx;
}
.num{
  padding: 15rpx;
}
.num .iconfont{
  border: 1px solid;
  font-size: 24rpx;
}
.num .num-total{
  padding: 0 20rpx;
}
/* 底部结算操作 */
.bottom-operation{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  position: fixed;
  bottom: 0;
  font-size: 30rpx;
  border-top: 1rpx solid #fff;
  background-color: #fff;
}
.checkAll{
  flex: 3
}
.totalPrice-top text{
  color: var(--themeColor)
}
.totalPrice-bottom{
  color: #ccc;
  text-align: right;
  font-size: 24rpx;
}
.pay-btn{
  color: white;
  background-color: var(--themeColor);
  height: 96rpx;
  width: 33.33%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 支付弹窗 */
.mask{
  width: 100%;
  height: 100%;
  background-color: #0F0202;
  opacity: 0.65;
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask-content{
  width: 70%;
  height: 40%;
  background-color: #fff;
}
.mask-content image{
  width: 100%;
  z-index: 9999;
}