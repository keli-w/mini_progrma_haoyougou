/* pages/category/category.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.main{
  flex: 1;
  height: 100%;
  display: flex;
}
.left-menu{
  flex: 1;
}
.right-content{
  flex: 4;
}
.menu-item{
  box-sizing: border-box;
  padding: 10rpx;
  background-color: #ccc;
  border-bottom: 4rpx solid #ddd;
  text-align: center;
}
.active{
  color: var(--themeColor);
  border-left: 4rpx solid red;
}
.content-title{
  display: flex;
  height: 64rpx;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.content-container{
  display: flex;
  flex-wrap: wrap;
}
.content-container .content-cicre{
  width: 33%;
  font-size: 24rpx;
  text-align: center;
}
.content-cicre image{
  width: 50%;
}