/* pages/goods_detail/goods_detail.wxss */
.pics-container{
  height: 400rpx;
}
.pics-item{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pics-item image{
  width: 100%;
}
.good-price{
  color: var(--themeColor);
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}
.good-info{
  display: flex;
  padding: 10rpx;
  font-size: 24rpx;
  color: #010101;
}
.left-name{
  flex: 6;
  margin-right: 30rpx;
}
.right-btn{
  flex: 1;
  text-align: center;
  border-left: 2rpx solid #ddd;
}
.bottom-tabbar{
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 100%;
}
.left-info{
  flex: 4;
  display: flex;
  justify-content: space-around;
  font-size: 20rpx;
  text-align: center;
  align-items: center;
  padding: 10rpx 0;
}
.right-button{
  flex: 3;
  display: flex;
  color: white;
}
.shopCar{
  background-color: #FF9900;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.buy{
  background-color: #E61A1A;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.info-item{
  width: 100%;
  position: relative;
}
.info-item .hidden-btn{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
}