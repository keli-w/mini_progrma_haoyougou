/* pages/goods_list/goods_list.wxss */
.goods_list{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.left-good{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left-good image{
  width: 80%;
}
.right-good{
  flex: 3;
  margin-left: 5%;
}
.goodInfo{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.goodPrice{
  color: var(--themeColor);
  font-size: 30rpx;
}