/* pages/collect/collect.wxss */
.goods_list{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #ddd;
}
.left-good{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.left-good image{
  width: 100%;
}
.right-good{
  flex: 3;
  margin: 0 5%;
}
.goodInfo{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.goodPrice{
  color: var(--themeColor);
  font-size: 30rpx;
}
.collectMark{
  flex: 1;
  height: 100%;
  text-align: center;
}